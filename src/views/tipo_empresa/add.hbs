<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-7">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Crear tipo de empresa</h1>
          </div>
          <form class="user" action="" method="post">
            <div class="form-group ">
                <input type="text" name="nombre" value="{{#tipo_empresa}}{{nombre}}{{/tipo_empresa}}" class="form-control form-control-user" id="txtNombre" placeholder="Nombre">
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
              {{#if tipo_empresa}}
                Modificar
              {{else}}
                Guardar
              {{/if}}
            </button>
            <hr>
          </form>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>



